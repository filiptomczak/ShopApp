@model Company
@* enctype for file upload *@
<div class="row pb-2">
    <h2 class="">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
    <hr />
</div>
<form method="post" >
    <input asp-for="@Model.Id" hidden />
    <div class="row">
            @* <div asp-validation-summary="All"></div> *@
            <div class="mb-3 row p-1">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" type="text" class="form-control" value="@Model.Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="@Model.Street"></label>
                <input asp-for="@Model.Street" type="text" class="form-control" value="@Model.Street">
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="@Model.City"></label>
                <input asp-for="@Model.City" type="text" class="form-control" value="@Model.City" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div><div class="mb-3 row p-1">
                <label asp-for="@Model.State"></label>
                <input asp-for="@Model.State" type="text" class="form-control" value="@Model.State" />
                <span asp-validation-for="@Model.State" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="@Model.PostalCode"></label>
                <input asp-for="@Model.PostalCode" type="text" class="form-control" value="@Model.PostalCode" />
                <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" type="text" class="form-control" value="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Id != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary form-control">Back</a>
                </div>
            </div>
        </div>
</form>