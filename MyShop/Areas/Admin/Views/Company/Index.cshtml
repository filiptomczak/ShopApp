@model List<Company>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>
                Companies List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Update" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> Add new Company
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" id="myTable" style="width:100%"> 
    <thead>
        <tr>        
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Action</th>
            @* <th>Edit</th>
            <th>Delete</th> *@
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

@section Scripts{
    <script src="~/js/company.js"></script>
}
