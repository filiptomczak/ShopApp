@model OrderVM
@{
    var isEmployee = false;
    if (User.IsInRole(CONSTS.ROLE_ADMIN) || User.IsInRole(CONSTS.ROLE_EMPLOYEE))
    {
        isEmployee = true;
    }
}
<h1>is employee: @isEmployee</h1>
<form method="post">
    <input hidden asp-for="OrderHeader.Id"/>
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1">
                        <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right">
                        <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to Orders</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>PickUp Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Name"/>
                                        <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Name" readonly/>
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" />
                                        <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                                    }
                                    else
                                    {
                                    <input type="text" class="form-control" asp-for="OrderHeader.PhoneNumber" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.Street" />
                                        <span asp-validation-for="OrderHeader.Street" class="text-danger"></span>
                                    }
                                    else
                                    {
                                    <input type="text" class="form-control" asp-for="OrderHeader.Street" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" />
                                        <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.City" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">State</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" />
                                        <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.State" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Zip Code</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" />
                                        <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                                    }
                                    else
                                    {
                                    <input type="text" class="form-control" asp-for="OrderHeader.PostalCode" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" class="form-control" asp-for="OrderHeader.AppUser.Email" />
                                        <span asp-validation-for="OrderHeader.AppUser.Email" class="text-danger"></span>
                                    }
                                    else
                                    {
                                    <input type="text" class="form-control" asp-for="OrderHeader.AppUser.Email" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                        <input type="text" readonly class="form-control" asp-for="OrderHeader.OrderDate"/>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" id="carrier" class="form-control" asp-for="OrderHeader.Carrier" />
                                    }
                                    else
                                    {
                                        <input type="text" readonly class="form-control" asp-for="OrderHeader.Carrier" />
                                    }
                                    
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Tracking</div>
                                <div class="col-9">
                                    @if (isEmployee)
                                    {
                                        <input type="text" id="tracking" class="form-control" asp-for="OrderHeader.TrackingNumber" />
                                    }
                                    else
                                    {
                                    <input type="text" class="form-control" asp-for="OrderHeader.TrackingNumber" readonly />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping Date</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" value="@Model.OrderHeader.ShipppingDate"/>
                                </div>
                            </div>

                            @if (isEmployee)
                            {
                                <div class="row my-1">
                                    <div class="col-3">Session ID</div>
                                    <div class="col-9">

                                        <input type="text" readonly class="form-control" asp-for="OrderHeader.SessionId"/>

                                    </div>
                                </div>
                            }
                            @if (isEmployee)
                            {
                                <div class="row my-1">
                                    <div class="col-3">Payment Intent ID</div>
                                    <div class="col-9">
                                    
                                            <input type="text" readonly class="form-control" asp-for="OrderHeader.PaymentIntentId"/>
                                    
                                    </div>
                                </div>
                            }
                            <div class="row my-1">
                                @if (Model.OrderHeader.SessionId == null)
                                {
                                    <div class="col-3">Payment Due Date</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" value="@Model.OrderHeader.PaymentDueDate.ToShortDateString()"/>
                                    </div>
                                }else{
                                    <div class="col-3">Payment Date</div>
                                    <div class="col-9">
                                        <input readonly type="text" class="form-control" value="@Model.OrderHeader.PaymentDate.ToShortDateString()"/>
                                    </div>
                                }
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Payment Status</div>
                                <div class="col-9">
                                    <input type="text" readonly class="form-control" asp-for="OrderHeader.PaymentStatus"/>
                                    
                                </div>
                            </div>
                            @if  (isEmployee){
                                <button asp-action="UpdateOrderDetails" type="submit" class="btn btn-warning form-control my-1">Update Order Details" </button>
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span>Order Summary</span>
                            </h4>
                            <label class="btn btn-outline-primary form-control my-2">Order Status - @Model.OrderHeader.OrderStatus</label>

                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetail)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0">@item.Product.Title</h6>
                                                <small class="text-muted">Price : @item.Price.ToString("c")</small><br />
                                                <small class="text-muted">Quantity : @item.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((item.Count*item.Price).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                    <li class="list-group-item bg-primary">
                                        <div class="row container">
                                            <div class="col-6">
                                                <h5 class="text-white">TOTAL </h5>
                                            </div>
                                            <div class="col-6 text-end">
                                                <h5 class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                            </div>
                                        </div>
                                    </li>
                                
                            </ul>
                            @if (Model.OrderHeader.PaymentStatus == CONSTS.PAYMENT_STATUS_DELAYED_PAYMENT)
                            {
                                <button type="submit" class="btn btn-success form-control my-1">Pay Now</button>
                            }
                            @if (User.IsInRole(CONSTS.ROLE_ADMIN) || User.IsInRole(CONSTS.ROLE_EMPLOYEE))
                            {
                                @if (Model.OrderHeader.OrderStatus == CONSTS.STATUS_APPROVED)
                                {
                                    <button asp-action="StartProcessing" type="submit" class="btn btn-primary form-control my-1">Start Processing</button>
                                }
                                @if (Model.OrderHeader.OrderStatus == CONSTS.STATUS_IN_PROCESS)
                                {
                                    <button onclick="return validateInput()" asp-action="ShipOrder" type="submit" class="btn btn-primary form-control my-1">Ship Order</button>
                                }
                                @if (Model.OrderHeader.OrderStatus != CONSTS.STATUS_REFUNDED && 
                                Model.OrderHeader.OrderStatus != CONSTS.STATUS_CANCELLED && 
                                Model.OrderHeader.OrderStatus != CONSTS.STATUS_SHIPPED)
                                {
                                    <button asp-action="CancelOrder" type="submit" class="btn btn-danger form-control my-1">Cancel Order</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
    <script>
        function validateInput(){
            if (document.getElementById("tracking").value == "") {
                Swal.fire({
                    title: "Validation Error",
                    text: "Tracking data is empty",
                    icon: "error",
                })
                return false;
            }
            if (document.getElementById("carrier").value == "") {
                Swal.fire({
                    title: "Validation Error",
                    text: "Carrier data is empty",
                    icon: "error",
                })
                return false;
            }
            return true;
        }
    </script>
}